<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Site</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-100">

  <%- include('partials/navbar', { page: '/addSite' }) %>

  <div class="container mx-auto mt-10">
    <div class="hero bg-blue-300 p-8 rounded-lg text-center">
      <h1 class="text-4xl font-bold">Add Site</h1>
    </div>

    <form class="bg-white p-6 rounded-lg shadow-lg mt-6" method="POST" action="/addSite">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="text" name="siteId" placeholder="Site ID" required class="input input-bordered w-full" />
        <input type="text" name="site" placeholder="Site Name" required class="input input-bordered w-full" />
        <input type="url" name="image" placeholder="Image URL" required class="input input-bordered w-full" />
        <input type="number" name="date" placeholder="Date" required class="input input-bordered w-full" />
        <input type="text" name="dateType" placeholder="Date Type" required class="input input-bordered w-full" />
        <input type="number" name="designated" placeholder="Designated Year" required class="input input-bordered w-full" />
        <input type="text" name="location" placeholder="Location" required class="input input-bordered w-full" />
        <input type="number" step="0.00000001" name="latitude" placeholder="Latitude" required class="input input-bordered w-full" />
        <input type="number" step="0.00000001" name="longitude" placeholder="Longitude" required class="input input-bordered w-full" />

        <select name="provinceOrTerritoryCode" required class="select select-bordered w-full">
          <option disabled selected>Select Province/Territory</option>
          <% provincesAndTerritories.forEach(prov => { %>
            <option value="<%= prov.code %>"><%= prov.name %></option>
          <% }) %>
        </select>
      </div>

      <textarea name="description" placeholder="Description" class="textarea textarea-bordered w-full mt-4" required></textarea>

      <div class="mt-4">
        <button type="submit" class="btn btn-primary">Add Site</button>
      </div>
    </form>
  </div>

</body>
</html>
